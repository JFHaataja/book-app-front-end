{
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "prettier"
    ],
    "overrides": [
        {
            "files": [
                "**/*.spec.js",
                "**/*.spec.jsx",
                "**/*_spec.cy.js",
                "**/*.cy.js"
            ]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "plugins": ["react", "jsdoc"],
    "rules": {
        "indent": "off",
        "require-jsdoc": "off",
        "jsdoc/require-jsdoc": "off",
        "react/prop-types": "off",
        "no-undef": "off"
    }
}
